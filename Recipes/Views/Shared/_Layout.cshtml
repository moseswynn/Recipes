<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/site.css">

    <title>@ViewBag.Title</title>
</head>
<body>
    <!--Start navigation bar-->
    <nav class="navbar navbar-expand-md fixed-top navbar-dark bg-dark">
        <div class="container">
            <h1 class="navbar-brand display-1" href="/">Recipes</h1>
            <div class="d-none d-md-block">
                <form class="form-inline">
                    <input class="form-control mr-2" type="search" placeholder="Find a recipe..." aria-label="Search">
                    <button class="btn btn-outline" type="submit">Search</button>
                </form>
            </div>
            <ul class="navbar-nav">
                <li class"nav-item"><a class="btn btn-outline-primary bg-dark" href="#" data-toggle="modal" data-target="#newRecipe">New Recipe</a></li>
            </ul>
        </div>
    </nav>
    <!--End navigation bar-->
    <!--Start main content-->
    <div class="container spacer">
        @RenderBody()
    </div>
    <!--End main content-->
    <!--JavaScript-->
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <!-- Popper -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <!-- Bootstrap -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Content/js/site.js"></script>
</body>
</html>
